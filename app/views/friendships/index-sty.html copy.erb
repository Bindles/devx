<div class="container mx-auto p-6">
  <h1 class="text-2xl font-bold mb-6">Your Friends</h1>

  <ul class="space-y-4">
    <% @friends.each do |friend| %>
      <li class="flex items-center justify-between p-4 border rounded-lg bg-gray-50">
        <!-- Friend Email Link -->
        <%= link_to '', path %>
        
        <%= link_to"<%= profile_path(friend.id) %>" class="text-blue-600 hover:underline">
          <%= friend.email %>
        </%%>

        <!-- Delete Friend Button -->
        <%= button_to 'Delete', friendship_path(friend.id), 
                      method: :delete, 
                      data: { confirm: 'Are you sure you want to remove this friend?' }, 
                      class: 'bg-red-500 hover:bg-red-600 text-white py-2 px-4 rounded' %>
      </li>
    <% end %>
  </ul>
</div>



